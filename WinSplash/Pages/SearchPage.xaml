<Page
    x:Class="WinSplash.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinSplash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:datatypes="using:WinSplash.Datatypes"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"  
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox                            
            Grid.Column="0"
            FontSize="20"
            x:Name="SearchBox" 
            KeyDown="SearchBox_KeyDown"
            PlaceholderText="Search Unsplash..." 
            VerticalAlignment="Top"
            TextWrapping="NoWrap"
            Margin="0,0,80,0"/>

        <CommandBar Grid.Column="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            DefaultLabelPosition="Collapsed"
            Height="39">

            <AppBarButton Icon="Find" Click="Search"/>
        </CommandBar>

        <ComboBox ItemsSource="{x:Bind imageNum}" 
            x:Name="ImageNumBox"
            Width="auto"
            Height="39"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,110,0"
            SelectionChanged="ImageNumBox_SelectionChanged"/>
        <CommandBar Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            DefaultLabelPosition="Right"
            Height="39">

            <AppBarButton Label="Refresh" Icon="Refresh" Click="Refresh"/>
        </CommandBar>

        <ProgressRing 
            x:Name="Spinner"
            IsActive="True"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Width="100"
            Height="100"
            Loaded="Refresh"/>

        <ScrollViewer
            Grid.Row="1"
            Grid.ColumnSpan="2" Padding="0,25,16,0"
            Margin="0,0,-24,0"
            IsTabStop="True">

            <GridView 
                x:Name="ImageGrid"
                ItemsSource="{x:Bind images}"
                IsItemClickEnabled="False"
                IsSwipeEnabled="False"
                CanDragItems="False"
                SelectionMode="None"
                HorizontalAlignment="Center"
                >

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Button Click="ImageClick"
                                RightTapped="ImageClickR"
                            Grid.Row="1"
                            Background="{x:Null}"
                            Height="300" Width="300"
                            Tag="{Binding id}">
                            <StackPanel Margin="-10">
                                <Image Source="{Binding smallUrl}" 
                                       Stretch="UniformToFill"
                                    Width="300"
                                    Height="300"
                                    Opacity="0">
                                    <interactivity:Interaction.Behaviors>
                                        <behaviors:Fade x:Name="FadeBehavior" 
                                            Value="1" 
                                            Duration="500" 
                                            Delay="500"
                                            EasingType="Default"
                                            AutomaticallyStart="True"/>
                                    </interactivity:Interaction.Behaviors>

                                </Image>
                            </StackPanel>
                            <Button.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Save Image" Icon="Save" Click="SaveImage"/>
                                    <MenuFlyoutItem Text="Copy Image" Icon="Copy" Click="CopyImage"/>
                                    <MenuFlyoutItem Text="Copy Link" Icon="Link" Click="CopyUrl"/>
                                    <MenuFlyoutItem Text="Set Wallpaper" Icon="Street" Click="SetWallpaper"/>
                                </MenuFlyout>
                            </Button.ContextFlyout>

                            <!-- <FlyoutBase.AttachedFlyout>
                                <Flyout Placement="Bottom">
                                    <ListView
                                        IsItemClickEnabled="True"
                                        ItemClick="ImageOptionClick"
                                        SelectionMode="None">
                                        <x:String>Save Image</x:String>
                                        <x:String>Copy Image</x:String>
                                        <x:String>Copy Link</x:String>
                                    </ListView>
                                        <ListView.ItemTemplate>
                                            <DataTemplate
                                                x:DataType="datatypes:ImageOption">
                                                <StackPanel Orientation="Horizontal" Height="24" Grid.Row="1" Tag="{Binding url}">
                                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{Binding icon}" Margin="0,0,4,0" FontSize="14" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding text}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate> -->
                            <!--<StackPanel>
                                        <Button Content="Save Image"
                                                Click="SaveImage"
                                                Tag="{Binding url}"/>
                                        <Button Content="Copy link"
                                                Click="CopyUrl"
                                                Tag="{Binding url}"
                                                Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout> -->
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>

        <FlipView x:Name="flipView" 
                  Grid.ColumnSpan="2"
                  Grid.RowSpan="2"
                  Canvas.ZIndex="99"
                  ItemsSource="{Binding}"
                  Visibility="Collapsed">
            <FlipView.Background>
                <AcrylicBrush TintColor="#99000000" />
            </FlipView.Background>
        </FlipView>



    </Grid>


</Page>